<%- partial('_partial/post-cover') %>

<%
    var isTocEnable = theme.toc && theme.toc.enable;
    var containerClass = isTocEnable ? 'post-container' : 'container';
%>

<main class="<%- containerClass %> content">

  <!-- 文章内容详情 -->
  <div id="artDetail">
      <div class="card">
          <div class="card-content article-info">

              <div class="article-tag">
                  

                <span class="chip bg-color"></span>


              </div>

              <div class="post-info">

                  <span class="post-cate">
                      <i class="fa fa-bookmark fa-fw icon-category"></i>
                  </span>

                  <span class="post-date">
                      <i class="fa fa-clock-o fa-fw"></i>
                  </span>
              </div>
          </div>
          <hr>
          <div class="card-content article-card-content">
              <div id="articleContent">
                  <%- page.content %>
              </div>
              <hr/>

              <% if (theme.reward && theme.reward.enable) { %>
              <%- partial('_partial/reward') %>
              <% } %>
          </div>
      </div>

      <% if (theme.disqus.enable) { %>
          <%- partial('_partial/disqus') %>
      <% } %>
  </div>

</main>
